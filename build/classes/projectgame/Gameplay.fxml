      </Pane>
      <Pane prefHeight="58.0" prefWidth="118.0">
         <children>
            <HBox fx:id="LivesBox" layoutX="-1.0" layoutY="12.0" prefHeight="51.0" prefWidth="138.0">
               <children>
                  <ImageView fx:id="nyawa" fitHeight="38.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@GUI/nyawa.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="nyawa" fitHeight="39.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@GUI/nyawa.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="nyawa" fitHeight="42.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@GUI/nyawa.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <Label fx:id="scoreLabel" layoutX="3.0" layoutY="-1.0" prefHeight="25.0" prefWidth="75.0" style="-fx-text-fill: white;" text="Score : 0" textFill="WHITE" />
         </children>
      </Pane>
      <HBox layoutX="203.0" layoutY="14.0" prefHeight="30.0" prefWidth="57.0">
         <children>
            <Button fx:id="pauseButton" mnemonicParsing="false" onMouseClicked="#handlePauseButton" prefHeight="27.0" prefWidth="55.0" style="-fx-background-color: gray;" text="Pause" />
         </children>
      </HBox>
   </children>
